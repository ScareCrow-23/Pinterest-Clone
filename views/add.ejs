<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-10 text-white">
  <h1 class="text-xl">Create New Post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input
      class="text-black w-1/3 block px-2 py-3"
      type="file"
      name="postimage"
    />
    <input
      class="text-black w-1/3 block px-2 py-3 border-2 rounded-md mt-3"
      type="text"
      placeholder="Title"
      name="title"
    />
    <textarea
      class="text-black w-1/3 h-60 block px-2 py-3 border-2 rounded-md mt-3"
      type="text"
      placeholder="Description"
      name="description"
    ></textarea>
    <input
      class="text-black w-1/3 block px-2 py-3 rounded-md mt-3 bg-red-700"
      type="submit"
      value="Create Post"
    />
  </form>
</div>

