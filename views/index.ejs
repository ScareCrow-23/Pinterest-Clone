<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-96 h-[60vh] bg-white px-8 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tight capitalized leading-none"
    >
      Welcome To Pintrest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 inline-block font-semibold text-zinc-500" href=""
        >Forgot Password ?</a
      >
      <input
        class="border-2 block w-full px-3 py-2 mt-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-400 mt-10 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's
        <a href="https://policy.pinterest.com/en-gb/terms-of-service-2018"
          >Terms of Service</a
        >
        and acknowledge you've read our
        <a href="https://policy.pinterest.com/en">Privacy Policy</a>. Notice at
        collection.
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Don't have an account?</a
    >
  </div>
</div>

<% include ./partials/footer.ejs %>
